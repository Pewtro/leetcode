{
  "name": "leetcode",
  "version": "1.0.0",
  "description": "Repo to host leetcode solutions",
  "author": "Putro",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=18.12.0 <20 || >=20.8.0"
  },
  "devDependencies": {
    "@putstack/eslint-config-typescript": "1.1.2",
    "@putstack/prettier-config": "1.2.2",
    "@types/node": "20.8.8",
    "concurrently": "8.2.2",
    "husky": "8.0.3",
    "lint-staged": "15.0.2",
    "typescript": "5.2.2",
    "vitest": "0.34.6"
  },
  "scripts": {
    "lint": "eslint --format stylish --max-warnings 0 --cache .",
    "lint:fix": "pnpm lint --fix",
    "prettier": "prettier . --write .",
    "prepare": "husky install",
    "stylecheck": "prettier --check .",
    "test": "vitest run",
    "watch": "vitest watch",
    "test:ci": "concurrently \"pnpm:lint\" \"pnpm:typecheck\" \"pnpm:stylecheck\" ",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs,cjs,jsx,md,mdx,yml,yaml}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx,mjs,cjs}": [
      "pnpm --silent lint:fix"
    ]
  }
}
